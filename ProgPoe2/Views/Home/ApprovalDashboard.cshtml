@model List<Claim> // The model passed to this view is a list of Claim objects

<h2>Approval Dashboard</h2> 

@if (Model.Any()) // Check if there are any pending claims
{
    <table class="table">
        // Displays a table of pending claims
        <thead>
            <tr>
                <th>ID</th> 
                <th>Lecturer</th>
                <th>Submission Date</th> 
                <th>Hours Worked</th> 
                <th>Total Amount</th> 
                <th>Document</th> 
                <th>Notes</th> 
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model) // Loop through each pending claim in the model
            {
                <tr>
                    <td>@claim.Id</td> 
                    <td>@claim.LecturerName</td> 
                    <td>@claim.SubmissionDate.ToShortDateString()</td> 
                    <td>@claim.HoursWorked</td> 
                    <td>R @((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td> 
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentName)) // If a document is present, show a link
                        {
                            <a href="#" onclick="alert('Document: @claim.SupportingDocumentName');">@claim.SupportingDocumentName</a>
                            // Placeholder for document link
                        }
                    </td>
                    <td>@claim.Notes</td> // Display additional notes
                    <td>
                        <a asp-action="EditClaim" asp-route-id="@claim.Id" class="btn btn-primary btn-sm">Edit</a> 
                        <form asp-action="UpdateClaimStatus" method="post" style="display: inline;">
                            <input type="hidden" name="claimId" value="@claim.Id" /> 
                            <button type="submit" name="status" value="Approved" class="btn btn-success btn-sm">Approve</button> 
                            <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no pending claims to approve.</p>
    // Message displayed when there are no pending claims
}
