@model List<Claim> // The model passed to this view is a list of Claim objects

<h2>Approval Dashboard</h2> // Heading for the approval dashboard

@if (Model.Any()) // Check if there are any pending claims
{
    <table class="table">
        // Displays a table of pending claims
        <thead>
            <tr>
                <th>ID</th> // Column for claim ID
                <th>Lecturer</th> // Column for lecturer name
                <th>Submission Date</th> // Column for submission date
                <th>Hours Worked</th> // Column for hours worked
                <th>Total Amount</th> // Column for total amount calculated
                <th>Document</th> // Column for supporting document
                <th>Notes</th> // Column for additional notes
                <th>Actions</th> // Column for action buttons (Approve/Reject)
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model) // Loop through each pending claim in the model
            {
                <tr>
                    <td>@claim.Id</td> // Display claim ID
                    <td>@claim.LecturerName</td> // Display lecturer name
                    <td>@claim.SubmissionDate.ToShortDateString()</td> // Display submission date
                    <td>@claim.HoursWorked</td> // Display hours worked
                    <td>R @((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td> // Calculate and display total amount
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentName)) // If a document is present, show a link
                        {
                            <a href="#" onclick="alert('Document: @claim.SupportingDocumentName');">@claim.SupportingDocumentName</a>
                            // Placeholder for document link
                        }
                    </td>
                    <td>@claim.Notes</td> // Display additional notes
                    <td>
                        <a asp-action="EditClaim" asp-route-id="@claim.Id" class="btn btn-primary btn-sm">Edit</a> // Edit button
                        <form asp-action="UpdateClaimStatus" method="post" style="display: inline;">
                            // Form to update claim status
                            <input type="hidden" name="claimId" value="@claim.Id" /> // Hidden field for claim ID
                            <button type="submit" name="status" value="Approved" class="btn btn-success btn-sm">Approve</button> // Approve button
                            <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm">Reject</button> // Reject button
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no pending claims to approve.</p>
    // Message displayed when there are no pending claims
}
