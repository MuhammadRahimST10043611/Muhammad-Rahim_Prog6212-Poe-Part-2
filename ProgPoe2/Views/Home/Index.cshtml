@{
    ViewData["Title"] = "Home"; // Sets the title of the page
}

<div class="jumbotron text-center bg-light">
    <h1 class="display-4">Contract Monthly Claim System (CMCS)</h1> // Main heading for the home page
    <p class="lead">Streamline your claim submission and approval process with our innovative solution.</p> // Description text
    <hr class="my-4"> // Horizontal rule for separation
    <p>Choose an action to get started:</p> // Instruction for the user

    <div class="row mt-4">
        // Row for action buttons
        <div class="col-md-4">
            // First column for Submit Claim action
            <h5>Submit a New Claim</h5> // Section heading
            <p>Create and submit a new claim for processing.</p> // Description of the action
            <a class="btn btn-primary btn-lg" href="@Url.Action("SubmitClaim", "Home")" role="button">Lecture Submit Claim</a> // Button to navigate to SubmitClaim page
        </div>
        <div class="col-md-4">
            // Second column for View Claims action
            <h5>View Your Claims</h5> // Section heading
            <p>Review and manage your submitted claims.</p> // Description of the action
            <a class="btn btn-success btn-lg" href="@Url.Action("ViewClaims", "Home")" role="button">Lecture View Claims Dashboard</a> // Button to navigate to ViewClaims page
        </div>
        <div class="col-md-4">
            // Third column for Approval Dashboard action
            <h5>Approval Dashboard</h5> // Section heading
            <p>Review and approve pending claims.</p> // Description of the action
            <a class="btn btn-info btn-lg" href="@Url.Action("ApprovalDashboard", "Home")" role="button">Coordinators Approval Dashboard</a> // Button to navigate to ApprovalDashboard page
        </div>
    </div>
</div>

<div class="row mt-5">
    // Row for feature cards
    <div class="col-md-4">
        // First feature card
        <div class="card">
            // Card for Seamless Submissions
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-file-alt fa-2x text-primary mb-3"></i><br>Seamless Submissions</h5> // Card title with icon
                <p class="card-text">Effortlessly submit claims and upload supporting documents with our user-friendly interface.</p> // Description of the feature
            </div>
        </div>
    </div>
    <div class="col-md-4">
        // Second feature card
        <div class="card">
            // Card for Enhanced Accuracy
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-check-double fa-2x text-success mb-3"></i><br>Enhanced Accuracy</h5> // Card title with icon
                <p class="card-text">Reduce errors and increase accuracy with our comprehensive claim management platform.</p> // Description of the feature
            </div>
        </div>
    </div>
    <div class="col-md-4">
        // Third feature card
        <div class="card">
            // Card for Efficiency Boost
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-chart-line fa-2x text-info mb-3"></i><br>Efficiency Boost</h5> // Card title with icon
                <p class="card-text">Streamline your workflow and boost productivity with our innovative approach to claim processing.</p> // Description of the feature
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    // Row for about and benefits section
    <div class="col-md-6">
        // About section
        <h2>About CMCS</h2> // Heading for about section
        <p>The Contract Monthly Claim System (CMCS) is designed to revolutionize the often-complex process of submitting and approving monthly claims for Independent Contractor (IC) lecturers. Our mission is to enhance both user experience and administrative efficiency through innovative .NET GUI development and C# programming.</p> // Description of CMCS
    </div>
    <div class="col-md-6">
        // Key benefits section
        <h2>Key Benefits</h2> // Heading for key benefits
        <ul class="list-group">
            // Unordered list for benefits
            <li class="list-group-item"><i class="fas fa-clock text-primary"></i> Time-saving claim submission process</li> // Benefit 1: Time-saving
            <li class="list-group-item"><i class="fas fa-shield-alt text-success"></i> Improved accuracy and data integrity</li> // Benefit 2: Improved accuracy
            <li class="list-group-item"><i class="fas fa-tasks text-info"></i> Streamlined approval workflow</li> // Benefit 3: Streamlined approval
            <li class="list-group-item"><i class="fas fa-chart-pie text-warning"></i> Comprehensive reporting and analytics</li> // Benefit 4: Reporting and analytics
        </ul>
    </div>
</div>
